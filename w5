#include <stdio.h>

int main() {
    int a, b;
    char op;

    printf("계산식 입력 (예: 3 + 4): ");
    scanf("%d %c %d", &a, &op, &b);

    if(op == '+') printf("결과: %d\n", a + b);
    else if(op == '-') printf("결과: %d\n", a - b);
    else if(op == '*') printf("결과: %d\n", a * b);
    else if(op == '/') printf("결과: %d\n", a / b);
    else printf("잘못된 연산자입니다.\n");

    return 0;
}
